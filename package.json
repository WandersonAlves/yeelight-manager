{
  "name": "yeelight-manager",
  "version": "0.1.1-preview.0",
  "description": "CLI to control yeelight devices!",
  "main": "./lib/index.js",
  "engines": {
    "node": ">=10.22.0"
  },
  "bin": {
    "yee": "./lib/index.js"
  },
  "files": [
    "lib/**/*",
    "rust/**/*",
    "Cargo.toml",
    "Cargo.lock",
    "build.rs"
  ],
  "napi": {
    "name": "color"
  },
  "scripts": {
    "lint": "eslint -c .eslintrc.js --ext .ts './src/**/*.ts' --fix",
    "start:dev": "node --inspect=0.0.0.0:9229 -r ts-node/register ./src/index.ts",
    "dev": "nodemon",
    "dev:cli": "node -r ts-node/register ./src/index.ts",
    "dev:release": "node ./lib/index.js",
    "release": "npx standard-version && yarn build && yarn publish",
    "release:preview": "npx standard-version --prerelease preview && yarn build && yarn publish",
    "build": "rm -rf lib/ && tsc",
    "build:rs": "napi build --release ./src/infra/screenshot",
    "build:rs:debug": "napi build ./src/infra/screenshot",
    "postinstall": "napi build --release ./src/infra/screenshot"
  },
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/cli-table": "^0.3.0",
    "@types/ip": "^1.1.0",
    "@types/node-localstorage": "^1.3.0",
    "@types/portscanner": "^2.1.0",
    "@types/tail": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.6.3",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.6",
    "prettier-quick": "^0.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@napi-rs/cli": "^2.15.2",
    "cli-table": "^0.3.11",
    "commander": "^7.0.0",
    "http-status": "^1.4.2",
    "inversify": "^5.0.1",
    "ip": "^1.1.5",
    "node-localstorage": "^2.2.1",
    "portscanner": "^2.2.0",
    "reflect-metadata": "^0.1.13",
    "tail": "^2.2.0",
    "winston": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint"
    ]
  }
}
