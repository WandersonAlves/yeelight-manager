{
  "name": "yeelight-manager-backend",
  "version": "0.0.1",
  "description": "Backend server to control yeelight devices",
  "main": "src/index.ts",
  "engines": {
    "node": ">=10.22.0"
  },
  "scripts": {
    "test": "mocha -r ts-node/register tests/cases/**/*.spec.ts",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src/**/*.ts --fix",
    "start:dev": "node --inspect=0.0.0.0:9229 -r ts-node/register ./src/index.ts",
    "dev": "nodemon",
    "release": "npx standard-version --release-as",
    "clean": "rm -rf dist/",
    "build": "tsc"
  },
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/chai": "^4.2.11",
    "@types/express": "^4.17.8",
    "@types/express-winston": "^4.0.0",
    "@types/mocha": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "chai": "^4.2.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.6.3",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.4.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "prettier-quick": "^0.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "express": "^4.17.1",
    "express-winston": "^4.0.5",
    "http-status": "^1.4.2",
    "inversify": "^5.0.1",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint"
    ]
  }
}
