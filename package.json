{
  "name": "yeelight-manager",
  "version": "0.0.21",
  "description": "CLI to control yeelight devices!",
  "main": "src/index.ts",
  "engines": {
    "node": ">=10.22.0"
  },
  "bin": {
    "yee": "./lib/index.js"
  },
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "lint": "eslint -c .eslintrc.js --ext .ts './src/**/*.ts' --fix",
    "start:dev": "node --inspect=0.0.0.0:9229 -r ts-node/register ./src/index.ts",
    "dev": "nodemon",
    "dev:cli": "node -r ts-node/register ./src/index.ts",
    "release": "npx standard-version && yarn build && yarn publish",
    "clean": "rm -rf dist/",
    "build": "tsc"
  },
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/cli-table": "^0.3.0",
    "@types/ffmpeg-static": "^3.0.0",
    "@types/ip": "^1.1.0",
    "@types/node-localstorage": "^1.3.0",
    "@types/portscanner": "^2.1.0",
    "@types/tail": "^2.0.0",
    "@types/tinycolor2": "^1.4.2",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.6.3",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.6",
    "prettier-quick": "^0.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "cli-table": "^0.3.9",
    "commander": "^7.0.0",
    "ffmpeg-static": "^4.2.7",
    "http-status": "^1.4.2",
    "inversify": "^5.0.1",
    "ip": "^1.1.5",
    "node-localstorage": "^2.2.1",
    "node-vibrant": "^3.2.1-alpha.1",
    "portscanner": "^2.2.0",
    "reflect-metadata": "^0.1.13",
    "tail": "^2.2.0",
    "tinycolor2": "^1.4.2",
    "winston": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint"
    ]
  }
}
